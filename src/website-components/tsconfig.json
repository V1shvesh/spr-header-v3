{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "jsx": "react",
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules", "**/__tests__/*", "**/__mocks__", "src/stories", "breakpoints.ts", "tailwind.config.ts"]
}
